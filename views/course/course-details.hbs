<style id="style">
 .svg_process_color {
     width: 100%;
  }
</style>
<div class="detailsPage">
  <h1>{{course.title}}</h1>
  <a href="/courses/editCourse/{{course._id}}">EDIT</a>
    <form action="/courses/delete/{{course._id}}" method="post"> 
      <button type="submit">Delete curso</button>
    </form>
  <div class="card-plan-Premium">
  <h2>Subsribe to Course4u's top courses</h3>
  <h3> Get premium access to all courses</h3>
  <a href="/auth/signup">Try Personal Plan for free</a>
  <p>â‚¬24.99 per month</p>
  </div>
  <div class="card-featAbout">
  <div class="card-skillsAbout">
  <div class="card-info">
  <p>About: {{course.description}}</p>
  <p>{{course.subdescription}}</p>
  {{#each course.list}}
    <p>{{this}}</p>
  {{/each}}
  {{#if course.skills}}
   </div>
   
   <div class="card-skills">
    <h5>Skills you will learn:</h5>
    {{#each course.skills}}
    <p>{{this}}</p>
    {{/each}}
    </div>
    {{/if}}
  </div>
  </div>
 <div class="card-features">
      {{#if course.features}}
      {{#each course.features}}
      <div class="imgFeatures">
        <img class="svg_features" src={{this.svg}} alt={{this.title}}/>
      </div>
   <div class="card-featContent">
      <h4>{{this.title}}</h4>
      <h5>{{this.subtitle}}</h5>
   </div>
      {{/each}}
      {{/if}}
  </div>

  {{#if course.offered}}
  {{#each course.offered}}
<div class="card-offered">
  <p><strong>Offered by:{{this.place}}</strong></p>
  <img src={{this.logo}} alt={{this.place}} />
</div>
{{/each}}
{{/if}}

<div class="card-content">
{{#if course.content}}
<h3>PROGRESS</h3>
  <div id='div_svg'>
        <img id="svg_process_color" class="svg_process_color delay-1" src="/public/images/SVG/WEB_DEV/Background process modules - skills color.svg"/>
  </div>

  <div class="navbar_content_title">
    {{#each course.content}}
    <h4 class='title'>{{this.title}} {{this.subtitile}}</h4>
    {{/each}}
  </div>

  {{#each course.content}}
  
    <div class="div_content no_active_display">
      <div>
        <img width="100px" src={{this.image}} alt={{this.title}} />
      </div>
      <div>
        <h2>{{this.subtitle}}</h2>
        <p>Duration: {{this.time}}</p>
        <h5>{{this.title_description}}</h5>
        <p>{{this.description_1}}</p>
        <p>{{this.description_2}}</p>
        <p>{{this.description_3}}</p>
        <p>{{this.description_4}}</p>
      </div>

    </div>

  </div>
{{/each}}
{{/if}}
</div>
<div class="card-reasons">
  <h5>{{course.title_why}}</h5>
  {{#if course.reasons}}
    {{#each course.reasons}}
      <h6>{{this.subtitle}}</h6>
      {{#each this.list}}
        <p>{{this}}</p>
      {{/each}}
      <p>{{this.description}}</p>
    {{/each}}
  {{/if}}
</div>
  <form class="review-form" method="POST" action="/reviews/new/{{course._id}}">
    <label>How would you rate this course?</label>
    <input type="number" placeholder="5" name="stars"/>
    <label>Comment:</label>
    <input type="text" placeholder="I really liked this course" name="comment"/>
    <label>User's name:</label>
    <input type="text" placeholder="John Doe" name="username"/>
    <button type="submit">Add review</button>
  </form>
</div>
</div>

<script src='/public/script/dom_details.js'></script>
<h3>Course4u</h3>
{{#if user}}
  <p>Let's start learning, {{ user.username}}</p>
{{else}}
  <div class="card-plan-Premium">
    <h2>Subscribe to Course4u's top courses</h2>
    <h3>Get premium access to all courses</h3>
    <a href="/signup">Subscribe</a>Try Personal Plan for free</a>
    <p>€24.99 per month</p>
  </div>
{{/if}}
<form class="course-form" method="GET" action="/courses/search">
  <label>Search by title</label>  
  <input id="input_search" type="text" name="title"/> 
  <select name="options" id="select" class="no_active_display" multiple>
  </select>
  <button type="submit">Search</button>
</form>
<div class="card-container">
  {{#each courses}}
    <div class="card-course {{_id}}" id='{{this.title}}'>
      <h4>{{this.title}}</h4>
      <img width="150px" src={{this.image}} alt={{this.title}} />
      <p>{{truncate this.description 100}}...</p>
    </div>
  {{/each}}
</div>

<script src="/script/courseView.js"></script>
<script src="/script/search.js"></script>


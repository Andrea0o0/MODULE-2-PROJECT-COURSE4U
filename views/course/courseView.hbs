<div class="containerHome">
  {{#if delete_course}}
    <div class="popup-message">
      <h1> Course deleted succesfully!</h1>
    </div>
  {{/if}}
  {{#if user}}
    <div class="popup-message">
      <h1>Let's start learning, {{user.username}}!</h1>
    </div>
  {{else}}
    <div class="cardPlan">
      <div class="card-plan-Premium">
        <h2>Course4u</h2>
        <h3>Subscribe to Course4u's premium courses for top-quality learning.</h3>
        <h3>Gain access to all courses by choosing the Personal Plan</h3>
        <a href="/auth/signup">Subscribe</a>
        <h4> €21.99 per month</h4>
        <p>No commitments, cancel anytime.</p>
      </div>
      <img class="homePic" src="/images/homepic.jpg" alt="home pic" />
    </div>
  {{/if}}
  <div class="card-container">
    {{#each courses}}
      <div class="card-course {{this.title}}" id="{{_id}}">
        <h4>{{this.title}}</h4>
        <img width="150px" src={{this.image}} alt={{this.title}} />
        <p>{{truncate this.description 100}}...</p>
      </div>
    {{/each}}
  </div>
</div>



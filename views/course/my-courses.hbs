
<div class="container">
    <h1>My Learning</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Courses</h3>
                    <div class="list-group">
                        {{#each courses}}
                        <div class="list-group-item">
                            <h4>{{name}}</h4>
                            <p>{{description}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
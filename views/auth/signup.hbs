            <div class="logo">
                <img
                  src="/images/SVG/LOGO/LOGO.svg"
                  alt="course4u logo"
                />
           </div>
        <div class="social-icons">
            <a href="#"><img
                src="/images/facebook-icon.png"
                class="facebook-logo"
              /></a>
            <a href="#"><img
                src="/images/instagram-icon.png"
                class="instagram-logo"
              /></a>
            <a href="#"><img
                src="/images/linkedin-icon.png"
                class="linkedin-logo"
              /></a>
            <a href="#"><img
                src="/images/twitter-icon.png"
                class="twitter-logo"
              /></a>
          </div>
        </div>
    </footer>


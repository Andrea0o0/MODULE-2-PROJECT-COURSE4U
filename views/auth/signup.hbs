  <h1>Welcome to course4U</h1>
</div>
<div class="container">
  <div id="imagen"><img
      src="/images/onlinecourse.jpg"
      alt="online course"
    />
  </div>
  
    <form  class="form" action="/auth/signup" method="POST">
      <label>Email</label>
      <input type="email" name="email" placeholder="john@doe.com" />

      <label>Username</label>
      <input type="text" name="username" placeholder="JohnDoe88" />

      <label>Password</label>
      <input type="password" name="password" placeholder="********" />

      <label>Name on Card</label>
      <input type="text" name="nameOnCard" placeholder="John Doe" />

      <label>Credit Card Number</label>
      <input type="text" name="cardNumber" placeholder="1111 2222 3333 4444" />

      <label>Expiration Date</label>
      <input type="text" name="expirationDate" placeholder="MM/YY" />

      <label>CVV</label>
      <input type="text" name="cvv" placeholder="***" />

      <label>Country</label>
      <input type="text" name="country" placeholder="USA" />

{{#if error}}
  <p style="color: red;">{{error}}</p>
{{/if}}

<button type="submit">Subscribe</button>
<p style="color: gray">
  By subscribing, you agree to our terms of use and Privacy Policy
</p>
<a href="/auth/login">Already have an account? Log in!</a>
      

       <div class="socialSignup">
        <h2> or connect with</h2>
        <a href="/auth/login">
          <img src="/images/googleLogo.png" alt="signup google" />
        </a>
        <a href="/auth/login">
          <img src="/images/facebookLogo.png" alt="signup facebook" />
        </a>
     </div>
    </form>
   
 </div>

<script src="/script/signup.js"></script>
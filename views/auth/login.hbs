<div class="signupHeader"><a href="/"><img
      src="/public/images/leftIcon.png"
      alt="icon Left"
    /></a>
  <h1>Login </h1>
</div>
<div class="container">
  <div id="imagen"><img
      src="/public/images/onlinecourse.jpg"
      alt="online course"
    />
  </div>
  <div id="form">
    <form action="/auth/login" method="POST">
   
      <label>Username</label>
      <input type="text" name="username" placeholder="JohnDoe88" />

      <label>Password</label>
      <input type="password" name="password" placeholder="********" />

      {{#if error}}
        <p style="color:rgb(218, 90, 90)">{{error}}</p>
      {{/if}}
      <button type="submit">Login</button>
      <a href="/auth/signup">Not registered yet? Sign up!</a>
    </form>
  </div>
</div>
<div class="signupHeader">
  <!-- <a href="/"><img
      src="/images/leftIcon.png"
      alt="icon Left"
    /></a> -->
    {{#if first_user}}
      <h1>Welcome {{user.username}}</h1>
    {{else}}
  <h1>Welcome Back </h1>
  {{/if}}
</div>
<div class="container">
  <div id="imagen"><img
      src="/images/onlinecourse.jpg"
      alt="online course"
    />
  </div>
  <div class="signup-form">
    <form action="/auth/login" method="POST">
      <label>Username</label>
      <input type="text" name="username" placeholder="JohnDoe88" />
      <label>Password</label>
      <input type="password" name="password" placeholder="********" />
      {{#if error}}
        <p style="color:rgb(218, 90, 90)">{{error}}</p>
      {{/if}}
      <button type="submit">Login</button>
      <a href="/auth/signup">Not registered yet? Sign up!</a>
      <div class="socialSignup">
        <h2> or connect with</h2>
        <a href="/auth/login">
          <img src="/images/googleLogo.png" alt="signup google" />
        </a>
        <a href="/auth/login">
          <img src="/images/facebookLogo.png" alt="signup facebook" />
        </a>
     </div>
    </form>
  </div>
</div>
<script src="/script.js"></script>

<footer class="mainFooter">
    <div class="container">
        <p>@2023 Course4U Inc. Todos los derechos reservados.</p>
            <div class="logo">
                <img
                  src="/images/SVG/LOGO/LOGO.svg"
                  alt="course4u logo"
                />
           </div>
        <div class="social-icons">
            <a href="#"><img
                src="/images/facebook-icon.png"
                class="facebook-logo"
              /></a>
            <a href="#"><img
                src="/images/instagram-icon.png"
                class="instagram-logo"
              /></a>
            <a href="#"><img
                src="/images/linkedin-icon.png"
                class="linkedin-logo"
              /></a>
            <a href="#"><img
                src="/images/twitter-icon.png"
                class="twitter-logo"
              /></a>
          </div>
        </div>
    </footer>